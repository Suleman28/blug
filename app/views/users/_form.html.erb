<% if @users.errors.any? %>
    <div class="bg-red-800 py-4 px-3 rounded-md">
    <h4 class="text-gray-200 font-bold mb-4">An error occurred whilst signing up</h4>
    <ul class="text-gray-300">
    <% @users.errors.full_messages.each do |err| %>
        <p><%= err %></p>
    <% end %>
    </ul>
    </div>
<% end %>

<%= form_with(model: @user, class: "space-y-4 text-gray-200 mt-6", local: true) do |form| %>
    <div>
        <%= form.label :username, class: "text-md font-bold" %><br>
        <%= form.text_field :username, class: "bg-gray-800 border-none rounded-md", size: "47x1", placeholder: "John Doe" %>
    </div>
    
    <div>
        <%= form.label :email, class: "text-md font-bold" %><br>
        <%= form.text_field :email, class: "bg-gray-800 border-none rounded-md", size: "47x1", placeholder: "john.doe@example.com" %>
    </div>
    
    <div>
        <%= form.label :password, class: "text-md font-bold" %><br>
        <%= form.password_field :password, class: "bg-gray-800 border-none rounded-md", size: "47x1", minlength: "20", placeholder: "••••••••••••"%>
    </div>

    <%= form.submit class: "bg-sky-500 px-4 py-1 rounded-md hover:underline cursor-pointer"%>
<% end %>