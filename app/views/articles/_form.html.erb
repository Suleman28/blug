        <% if @article.errors.any? %>
            <div class="bg-red-800 py-4 px-3 rounded-md">
            <h4 class="text-gray-200 font-bold mb-4">An error occurred whilst creating article</h4>
            <ul class="text-gray-300">
            <% @article.errors.full_messages.each do |err| %>
                <p><%= err %></p>
            <% end %>
            </ul>
            </div>
        <% end %>

        <%= form_with(model: @article, class: "space-y-4 text-gray-200 mt-6", local: true) do |form| %>
            <div>
                <%= form.label :author, class: "text-md font-bold" %><br>
                <%= form.text_field :author, class: "bg-gray-800 border-none rounded-md text-gray-400", size: "47x1", value: "Suleman", readonly: "true" %>
            </div>
            
            <div>
                <%= form.label :title, class: "text-md font-bold" %><br>
                <%= form.text_field :title, class: "bg-gray-800 border-none rounded-md", size: "47x1", minlength: "10", maxlength: "100" %>
            </div>
            
            <div>
                <%= form.label :description, class: "text-md font-bold" %><br>
                <%= form.text_area :description, class: "bg-gray-800 border-none rounded-md", size: "50x6", minlength: "20" %>
            </div>

            <%= form.submit class: "bg-sky-500 px-4 py-1 rounded-md hover:underline cursor-pointer"%>
        <% end %>